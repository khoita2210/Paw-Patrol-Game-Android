    <ImageView
        android:id="@+id/logoSky"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="18dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoMashall"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber9"
        app:srcCompat="@drawable/sky" />

    <ImageView
        android:id="@+id/logoRocky"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="37dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRyder"
        app:srcCompat="@drawable/rocky" />

    <ImageView
        android:id="@+id/logoRubble"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="37dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoRocky"
        app:layout_constraintTop_toBottomOf="@+id/logoChase"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rubble" />

    <ImageView
        android:id="@+id/logoZuma"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/logoRubble"
        app:layout_constraintTop_toBottomOf="@+id/logoPaw"
        app:srcCompat="@drawable/zuma" />

    <ImageView
        android:id="@+id/logoEverest"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="37dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoZuma"
        app:layout_constraintTop_toBottomOf="@+id/logoMashall"
        app:srcCompat="@drawable/everest" />

    <ImageView
        android:id="@+id/logoRex"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="37dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoEverest"
        app:layout_constraintTop_toBottomOf="@+id/logoSky"
        app:srcCompat="@drawable/rex" />

    <TextView
        android:id="@+id/leftOpenAnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/rubik_mono_one"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#1E88E5"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBroad"
        app:layout_constraintStart_toStartOf="@+id/whiteBroad"
        app:layout_constraintTop_toTopOf="@+id/whiteBroad"
        app:layout_constraintVertical_bias="0.86" />

    <TextView
        android:id="@+id/rightOpenAnd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/rubik_mono_one"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#1E88E5"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBroad"
        app:layout_constraintStart_toStartOf="@+id/whiteBroad"
        app:layout_constraintTop_toTopOf="@+id/whiteBroad"
        app:layout_constraintVertical_bias="0.863" />

    <TextView
        android:id="@+id/plusSign"
        android:layout_width="94dp"
        android:layout_height="91dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="+"
        android:textColor="#1E88E5"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBroad"
        app:layout_constraintEnd_toEndOf="@+id/rightOpenAnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/whiteBroad"
        app:layout_constraintTop_toTopOf="@+id/whiteBroad"
        app:layout_constraintVertical_bias="0.013" />

    <TextView
        android:id="@+id/equalSign"
        android:layout_width="94dp"
        android:layout_height="91dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="="
        android:textColor="#1E88E5"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBroad"
        app:layout_constraintEnd_toEndOf="@+id/whiteBroad"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/rightOpenAnd"
        app:layout_constraintTop_toTopOf="@+id/whiteBroad"
        app:layout_constraintVertical_bias="0.366" />

    <ImageView
        android:id="@+id/wrongAnswer"
        android:layout_width="119dp"
        android:layout_height="112dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/whiteBroad"
        app:layout_constraintEnd_toEndOf="@+id/whiteBroad"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="@+id/whiteBroad"
        app:layout_constraintTop_toTopOf="@+id/whiteBroad"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wronganswer" />

    <ImageView
        android:id="@+id/wrongAnswer2"
        android:layout_width="70dp"
        android:layout_height="76dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintBottom_toBottomOf="@+id/wrongAnswer"
        app:layout_constraintEnd_toEndOf="@+id/wrongAnswer"
        app:layout_constraintTop_toTopOf="@+id/wrongAnswer"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/oops" />

</androidx.constraintlayout.widget.ConstraintLayout>
