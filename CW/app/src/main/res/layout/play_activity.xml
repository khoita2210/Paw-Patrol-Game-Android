    <ImageButton
        android:id="@+id/buttonNumber0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="60dp"
        android:alpha="1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n0" />
    <!--Adding button number 0 -->
    <ImageButton
        android:id="@+id/buttonNumber1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:alpha="1"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber2"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber0"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n1" />
    <!--Adding button number 1 -->
    <!--Adding button number 2-->
    <ImageButton
        android:id="@+id/buttonNumber2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n2" />

    <ImageButton
        android:id="@+id/buttonNumber3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber4"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n3" />

    <ImageButton
        android:id="@+id/buttonNumber4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="18dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/n4" />

    <ImageButton
        android:id="@+id/buttonNumber5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber0"
        app:srcCompat="@drawable/number5" />

    <ImageButton
        android:id="@+id/buttonNumber6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="7dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber7"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber5"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber1"
        app:srcCompat="@drawable/n6" />

    <ImageButton
        android:id="@+id/buttonNumber7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber2"
        app:srcCompat="@drawable/n7" />

    <ImageButton
        android:id="@+id/buttonNumber8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumber9"
        app:layout_constraintStart_toEndOf="@+id/buttonNumber7"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber3"
        app:srcCompat="@drawable/n8" />

    <ImageButton
        android:id="@+id/buttonNumber9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="18dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber4"
        app:srcCompat="@drawable/n9" />

    <ImageView
        android:id="@+id/whiteBroad"
        android:layout_width="411dp"
        android:layout_height="315dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/broadd" />

    <ImageView
        android:id="@+id/logoPaw"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="113dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber7"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/logoRyder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="457dp"
        android:layout_marginBottom="113dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber5"
        app:srcCompat="@drawable/ryder" />

    <ImageView
        android:id="@+id/logoChase"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="113dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoPaw"
        app:layout_constraintStart_toEndOf="@+id/logoRyder"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber6"
        app:srcCompat="@drawable/chase" />

    <ImageView
        android:id="@+id/logoMashall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="457dp"
        android:layout_marginBottom="113dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoPaw"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumber8"
